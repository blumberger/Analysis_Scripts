############################################
#                                          #
# An input file to calculate the radial    #
# distribution function for an xyz file.   #
############################################

# Set some variables
folder = "/scratch/mellis/LAMMPS_1ns_Quench_Compress/xyz_md"
filepath = "$folder/snapshot0.dat"

# Load the data from an xyz file
load $filepath lammps_dump as data

# Tell the code we are working with pentacene
set system data to pentacene

# Set the number of bins for the RDF calc
data['coordinate_wrapping'] = "wrapped"
data['number_bins'] = 120

# Calculate RDF
calc RDF from data as rdf_data

# Plot the data with a little script
inp_folder = "examples/calc_RDF"
script "$inp_folder/plot_script.py"

# Write the xyz file after
write data "pentacene_system_test.xyz" as xyz
